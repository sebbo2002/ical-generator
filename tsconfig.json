{
    "$schema": "https://json.schemastore.org/tsconfig",
    "compilerOptions": {
        "allowImportingTsExtensions": true,
        "declaration": true,
        "esModuleInterop": true,
        "lib": ["es2023"],
        "module": "node16",
        "moduleResolution": "node16",
        "outDir": "./dist",
        "skipLibCheck": true,
        "sourceMap": true,
        "strict": true,
        "target": "es2022",
        "verbatimModuleSyntax": true
    },
    "exclude": ["node_modules", "**/*.spec.ts"],
    "include": ["src/**/*"],
    "ts-node": {
        "esm": true,
        "experimentalResolver": true,
        "files": true
    }
}
